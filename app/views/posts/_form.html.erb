<%= form_for(@post, remote: true) do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :user_key %><br />
    <%= f.password_field :user_key %>
  </div>
  <div class="field">
    <%= f.hidden_field :latitude %>
  </div>
  <div class="field">
    <%= f.hidden_field :longitude %>
  </div>
  <div class="action">
    <input type="button" value="Submit!" onclick="locateAndSubmit();" />
  </div>
<% end %>
